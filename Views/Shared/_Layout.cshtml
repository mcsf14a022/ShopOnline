<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.title</title>

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="~/Sheets/960_12_col.css" rel="stylesheet" />
    <link href="~/Sheets/reset.css" rel="stylesheet" />
    <link href="~/Sheets/stylesheet.css" rel="stylesheet" />
    <link href="~/Sheets/text.css" rel="stylesheet" />
    <link href="~/Sheets/animate.css" rel="stylesheet" />
    <link href="~/Sheets/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Sheets/bootstrap.css" rel="stylesheet" />
    <link href="~/Sheets/font-awesome.css" rel="stylesheet" />
    <link href="~/Sheets/jquery-ui.css" rel="stylesheet" />
    <link href="~/Sheets/jquery-ui.structure.css" rel="stylesheet" />
    <link href="~/Sheets/jquery-ui.theme.css" rel="stylesheet" />

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/jquery-2.1.4.js"></script>
    <script src="~/js/jquery-ui.js"></script>
    <script src="~/js/npm.js"></script>
    <script src="~/js/jquery.snow.js"></script>
    @*<script>
         $(document).ready(function () {
             $.fn.snow();
         });
</script>*@

</head>
<body>

    <div class="container_12">


        <ul class="nav nav-pills">
            @if (Session["Name"] != null)
            {
                <li>@Session["Name"]</li>
            }
        </ul>


        <header class="navbar navbar-inverse">
            <nav class="navbar-inner">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/Home/Index">Shop Online</a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">

                        <li><a href="/Home/Index">Home</a></li>

                        <li><a href="/Categories/Categories">Categories</a></li>
                        <li><a href="/Contact/Contact">Contact</a></li>
                        <li>
                            <a href="/MyCart/MyCart">My Cart
                                    <span class="glyphicon glyphicon-shopping-cart"></span>
                            </a>
                        </li>
                        @*@if (Session["Name"]!=null) {<li> @Session["Name"]</li>}*@
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/SignUp/SignUp"><span class="glyphicon glyphicon-user"></span>Sign Up</a></li>
                        <li><a href="/Login/Login"><span class="glyphicon glyphicon-log-in"></span>Login</a></li>
                    </ul>
                </div>
            </nav>
        </header>

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">

                <li data-target="#myCrousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>

            </ol>

            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Images/banner.jpg" alt="Shop Till You Drop" />
                </div>

                <div class="item">
                    <img src="~/Images/Stylo-Shoes-Fall-Winter-Collection-for-Women-and-Kids-with-Prices-2015-9.jpg" alt="Shoes" />
                </div>

                <div class="item">
                    <img src="~/Images/shopping.jpg" alt="Clothes" />
                </div>

                <div class="item">
                    <img src="~/Images/Banner_8_-_Handbags.jpg" alt="Bags" />
                </div>
                <div class="item">
                    <img src="~/Images/banner_sequence_gift2.jpg" alt="Accessories" />
                </div>
            </div>

            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>


        </div>

        @RenderBody()
    </div>
</body>
</html>
