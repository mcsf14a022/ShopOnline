@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<script src="https://maps.googleapis.com/maps/api/js"></script>
<script src="~/js/map.js"></script>
<div class="container_12">

    <div class="row col-lg-12 col-md-6 col-sm-6">
        <h5 class="font_8 col-lg-12 col-md-12 col-sm-12">Send Us a Message</h5>
        <form method="post" action="/Home/Contact">
            <div class="text">
                <input type="text" name="n" placeholder="UserName" required="required" /><br>

                <input type="email" name="e" placeholder="E_mail" required="required" /><br>

                <textarea name="t" placeholder="Message" required="required"></textarea>

            </div>

            <button type="submit" class="button" value="btnSend">Send</button>
        </form>
    </div>
    <div class="row">
        <h5 class="font_8 col-lg-12 col-md-12 col-sm-12">Location</h5>
    </div>
    <div class="row">
        <div id="map">
        </div>
    </div>
    <footer>
        <p></p>
    </footer>
</div>
